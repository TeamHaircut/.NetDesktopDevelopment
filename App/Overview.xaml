<Page x:Class="GUIFunctionalTest0.Views.Overview"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GUIFunctionalTest0.Views"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="600"
      Title="Overview">

    <Grid>
		<StackPanel Orientation="Vertical" VerticalAlignment="Top" Margin="20">
			<Label Content="Overview" FontSize="36" Background="Transparent" Foreground="White"/>
			<TextBox Background="Transparent" TextWrapping="Wrap" Foreground="White" FontSize="24" IsReadOnly="True" BorderThickness="0">
				Some Text
			</TextBox>
		</StackPanel>
		<Button 
			Content="Continue" 
			FontSize="18"
			Foreground="White" 
			Width="110" Height="45" 
			VerticalAlignment="Bottom" HorizontalAlignment="Right" 
			Margin="20" 
		    BorderBrush="#FFDDDDDD">
			<Button.Background>
				<LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
					<GradientStop Color="#FFF3F3F3" Offset="0"/>
					<GradientStop Color="#FFEBEBEB"/>
					<GradientStop Color="#FFDDDDDD"/>
					<GradientStop Color="#FF707070" Offset="1"/>
				</LinearGradientBrush>
			</Button.Background>
		</Button>
	</Grid>
</Page>
