<Page x:Class="GUIFunctionalTest0.Views.Participant"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GUIFunctionalTest0.Views"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="600"
      Title="Participant">

	<Grid>
		<StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="20">
			<Label Content="Participant Number" Foreground="White"/>
			<TextBox Width="100" Height="35" Margin="10,0,0,0"/>
		</StackPanel>
		<Button 
			Click="ParticipantClick"
			Content="Continue" 
			FontSize="18"
			Foreground="White" 
			Width="110" Height="45" 
			VerticalAlignment="Bottom" HorizontalAlignment="Right" 
			Margin="20" 
			BorderBrush="#FFDDDDDD">
			<Button.Background>
				<LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
					<GradientStop Color="#FFF3F3F3" Offset="0"/>
					<GradientStop Color="#FFEBEBEB"/>
					<GradientStop Color="#FFDDDDDD"/>
					<GradientStop Color="#FF707070" Offset="1"/>
				</LinearGradientBrush>
			</Button.Background>
		</Button>
	</Grid>
	
</Page>
